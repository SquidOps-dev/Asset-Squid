<Window x:Class="SquidOps_AssetSquid.Views.LocationsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Locations"
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        ResizeMode="CanResize">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Navigation -->
            <RowDefinition Height="Auto"/>
            <!-- Title + Button -->
            <RowDefinition Height="*"/>
            <!-- Table -->
        </Grid.RowDefinitions>

        <!-- Navigation Bar -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,20">
            <Button Content="Menu" Click="GoToMenu_Click" Style="{StaticResource NavButtonStyle}" />
            <Button Content="Devices" Click="GoToDevices_Click" Style="{StaticResource NavButtonStyle}" />
            <Button Content="Privacy" Click="GoToPrivacy_Click" Style="{StaticResource NavButtonStyle}" />
        </StackPanel>

        <!-- Title + Button -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="All Locations"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="0,0,20,0"/>
            <Button Content="+ New Location"
                    Width="140"
                    Height="36"
                    Background="#1f8ea3"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="AddLocation_Click"/>
        </StackPanel>

        <!-- Locations Table -->
        <Border Grid.Row="2"
                BorderBrush="#26d9fd"
                BorderThickness="2"
                CornerRadius="12"
                Padding="10">
            <DataGrid x:Name="LocationGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      AlternatingRowBackground="#1e1e1e"
                      RowBackground="#2a2a2a"
                      GridLinesVisibility="Horizontal"
                      BorderThickness="0"
                      Foreground="White"
                      FontSize="14"
                      RowHeight="32"
                      ColumnHeaderHeight="36">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                    <DataGridTextColumn Header="Room Number" Binding="{Binding RoomNumber}" Width="*" />
                    <DataGridTextColumn Header="Building" Binding="{Binding Building}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>
